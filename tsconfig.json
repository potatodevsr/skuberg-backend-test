{
  "compilerOptions": {
      "rootDir": ".",
      "target": "ES2020",
      "module": "commonjs",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["src", "prisma/generated/express"],
  "exclude": ["node_modules"]
}
